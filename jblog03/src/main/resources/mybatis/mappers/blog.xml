<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="blog">
	
	<insert id="insert" parameterType = "uservo" >
		<![CDATA[
			insert into blog
			 values ('title', '/images/202214104539465.png', #{id})
		]]>
	</insert>
	
	<update id="update" parameterType="blogvo">
		<![CDATA[
				update blog set title= #{title}, logo= #{logo} where user_id = #{id}
		]]>
	</update>
	
	<select id="findById" parameterType = "String" resultType="blogVo">
		<![CDATA[
			select title, logo, user_id from blog where user_id = #{id}
		]]>
	</select>
</mapper>